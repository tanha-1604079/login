<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/backg1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/battery"
        tools:ignore="MissingConstraints"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/white"
            android:layout_height="230dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/leader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toEndOf="@id/white"
                app:layout_constraintTop_toTopOf="@id/white"
                android:src="@drawable/leader"/>
            <ImageView
                android:id="@+id/profile"
                android:layout_width="220dp"
                android:layout_height="120dp"
                android:paddingLeft="15dp"
                app:layout_constraintTop_toBottomOf="@id/leader"
                android:src="@drawable/profile"/>
            <ImageView
                android:id="@+id/point"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/leader"
                android:src="@drawable/point"/>
            <ImageView
                android:id="@+id/group26"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile"
                android:src="@drawable/group_26"/>
            <ImageView
                android:id="@+id/group25"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile"
                android:src="@drawable/group_25"/>
            <ImageView
                android:id="@+id/group24"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile"
                android:src="@drawable/group_24"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rectangle_30">
            <ImageView
                android:id="@+id/first"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:paddingTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_first"/>
            <ImageView
                android:id="@+id/second"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:paddingTop="20dp"
                android:paddingLeft="-20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/second"/>
            <ImageView
                android:id="@+id/third"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/third"/>
            <ImageView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/first"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/group_28"/>
            <ImageView
                android:id="@+id/place4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/place"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/place4"/>
            <ImageView
                android:id="@+id/place5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/place4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/group_31"/>
            <ImageView
                android:id="@+id/place6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/place5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/group_32"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>